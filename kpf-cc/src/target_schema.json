{
    "title": "KPF Community Cadence Target Params",
    "description": "This document defines the schema for the KPF Community Cadence Target Params",
    "type": "object",
    "properties": {
        "semester": {
            "type": "string",
            "description": "Semester",
            "pattern": "^([0-9]{4}[AB])$"
        },
        "prog_id": {
            "type": "string",
            "description": "Project Id",
            "pattern": "^[A-Z]{1}[0-9]{3}$"
        },
        "pi": {
            "type": "string",
            "description": "Principal Investigator"
        },
        "target_name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9\\s]+$",
            "description": "Target Name"
        },
        "j_mag": {
            "type": "number",
            "description": "J Magnitude"
        },
        "g_mag": {
            "type": "number",
            "description": "G Magnitude"
        },
        "t_eff": {
            "type": "number",
            "description": "Effective Temperature"
        },
        "simulcal_on": {
            "type": "boolean",
            "default": true,
            "description": "simulcal on or off"
        },
        "nominal_exposure_time": {
            "type": "integer",
            "description": "Nominal Exposure Time (s)"
        },
        "maximum_exposure_time": {
            "type": "integer",
            "description": "Maximum Exposure Time (s)"
        },
        "num_visits_per_night": {
            "type": "integer",
            "default": 1,
            "description": "Number of visits per night"
        },
        "num_unique_nights_per_semester": {
            "type": "integer",
            "description": "Number of unique nights per semester"
        },
        "minimum_intranight_cadence": {
            "type": "integer",
            "description": "Minimum Intranight Cadence"
        },
        "minimum_internight_cadence": {
            "type": "integer",
            "description": "Minimum Internight Cadence"
        },
        "num_observations_per_visit": {
            "type": "integer",
            "description": "Number of observations per visit"
        },
        "target_feasible": {
            "type": ["boolean", "null"],
            "description": "Is targed valid?"
        },
        "epoch": {
            "type": "string",
            "description": "Epoch"
        },
        "pm_dec": {
            "type": "number",
            "description": "Proper Motion in Dec"
        },
        "pm_ra": {
            "type": "number",
            "description": "Proper Motion in RA"
        },
        "ra": {
            "type": "string",
            "description": "Right Asecension"
        },
        "dec": {
            "type": "string",
            "description": "Declination"
        },
        "ra_deg": {
            "type": "number",
            "description": "Right Ascension in degrees"
        },
        "dec_deg": {
            "type": "number",
            "description": "Declination in degrees"
        },
        "comment": {
            "type": "string",
            "description": "Notes/comments"
        },
        "tic_id": {
            "type": "string",
            "description": "TIC Identifier"
        },
        "gaia_id": {
            "type": "string",
            "description": "GAIA Identifier"
        }
    },
    "required": [
        "semester",
        "prog_id",
        "pi",
        "target_name",
        "j_mag",
        "t_eff",
        "simulcal_on",
        "nominal_exposure_time",
        "maximum_exposure_time",
        "minimum_intranight_cadence",
        "minimum_internight_cadence",
        "num_observations_per_visit",
        "num_visits_per_night",
        "num_unique_nights_per_semester"
    ],
    "additionalProperties": true
}